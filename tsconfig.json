{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "noEmitOnError": true,
    "declaration": false
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.types.ts", "src/**/*.test.ts"]
}
